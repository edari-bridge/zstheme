#!/bin/bash
# zstheme - Claude Code Statusline Theme Manager
# https://github.com/edari-bridge/zstheme

set -e

VERSION="2.0.0"

# Resolve symlinks to find actual script location
SOURCE="${BASH_SOURCE[0]}"
while [[ -L "$SOURCE" ]]; do
    DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"

THEME_DIR="$SCRIPT_DIR/themes"
CLAUDE_DIR="$HOME/.claude"

# Colors
RST=$'\033[0m'
BOLD=$'\033[1m'
DIM=$'\033[2m'
GREEN=$'\033[32m'
YELLOW=$'\033[33m'
BLUE=$'\033[34m'
MAGENTA=$'\033[35m'
CYAN=$'\033[36m'

# ============================================================
# Helper Functions
# ============================================================

print_header() {
    echo ""
    echo "${MAGENTA}${BOLD}  ╭──────────────────────────────────────╮${RST}"
    echo "${MAGENTA}${BOLD}  │${RST}  ${CYAN}zstheme${RST} - Claude Code Statusline   ${MAGENTA}${BOLD}│${RST}"
    echo "${MAGENTA}${BOLD}  ╰──────────────────────────────────────╯${RST}"
    echo ""
}

# 모듈식 테마 목록 생성 (60개 조합)
get_modular_themes() {
    local layouts=("1-line" "2-line" "card" "bars" "badges")
    local colors=("" "mono-")
    local anims=("" "lsd-" "rainbow-")
    local icons=("" "-nerd")

    for color in "${colors[@]}"; do
        for anim in "${anims[@]}"; do
            for layout in "${layouts[@]}"; do
                for icon in "${icons[@]}"; do
                    echo "${color}${anim}${layout}${icon}"
                done
            done
        done
    done
}

# 테마가 유효한지 확인
is_valid_theme() {
    local theme="$1"
    [[ "$theme" =~ ^(mono-)?(lsd-|rainbow-)?(1-line|2-line|card|bars|badges)(-nerd)?$ ]]
}

get_current_theme() {
    echo "${CLAUDE_THEME:-2-line}"
}

theme_description() {
    local theme="$1"
    local desc=""

    # 레이아웃
    if [[ "$theme" == *"1-line"* ]]; then
        desc="Compact"
    elif [[ "$theme" == *"2-line"* ]]; then
        desc="Classic"
    elif [[ "$theme" == *"card"* ]]; then
        desc="Boxed"
    elif [[ "$theme" == *"bars"* ]]; then
        desc="Grouped bars"
    elif [[ "$theme" == *"badges"* ]]; then
        desc="Individual badges"
    fi

    # 색조
    if [[ "$theme" == mono-* ]]; then
        desc="$desc mono"
    else
        desc="$desc color"
    fi

    # 애니메이션
    if [[ "$theme" == *lsd-* ]]; then
        desc="$desc lsd"
    elif [[ "$theme" == *rainbow-* ]]; then
        desc="$desc rainbow"
    fi

    # 아이콘
    if [[ "$theme" == *-nerd ]]; then
        desc="$desc (Nerd Font)"
    fi

    echo "$desc"
}

# ============================================================
# Commands
# ============================================================

cmd_list() {
    local current=$(get_current_theme)
    echo ""
    echo "${BOLD}Available themes (60 combinations):${RST}"
    echo "${DIM}Format: [mono-][lsd-|rainbow-]{layout}[-nerd]${RST}"
    echo ""

    # 레이아웃별로 그룹핑하여 표시
    local layouts=("1-line" "2-line" "card" "bars" "badges")
    for layout in "${layouts[@]}"; do
        echo "  ${MAGENTA}${layout}:${RST}"
        # 각 레이아웃에 해당하는 8개 조합
        for theme in $(get_modular_themes | grep "${layout}"); do
            if [[ "$theme" == "$current" ]]; then
                echo "    ${GREEN}* ${BOLD}$theme${RST}"
            else
                echo "      ${CYAN}$theme${RST}"
            fi
        done
    done

    echo ""
    echo "${DIM}Current: ${GREEN}$current${RST}"
    echo "${DIM}Set theme: ${CYAN}export CLAUDE_THEME=<name>${RST}"
    echo ""
}

cmd_preview() {
    echo ""
    echo "${BOLD}Theme Previews:${RST}"
    echo ""

    # Mock data for preview
    export MODEL="Claude Opus 4.5"
    export DIR_NAME="my-project"
    export CONTEXT_PCT=35
    export SESSION_DURATION_MIN=42
    export IS_GIT_REPO=true
    export BRANCH="main"
    export WORKTREE="my-project"
    export GIT_ADDED=3
    export GIT_MODIFIED=2
    export GIT_DELETED=0
    export GIT_AHEAD=1
    export GIT_BEHIND=0
    export RATE_TIME_LEFT="2h 30m"
    export RATE_RESET_TIME="04:00"
    export RATE_LIMIT_PCT=42
    export BURN_RATE='$4.76/h'

    # 샘플 테마 프리뷰
    local samples=("1-line" "1-line-nerd" "2-line" "2-line-nerd" "card" "card-nerd" "bars" "bars-nerd" "badges" "badges-nerd" "lsd-2-line" "rainbow-2-line" "mono-2-line-nerd")
    for theme in "${samples[@]}"; do
        export THEME_NAME="$theme"
        echo "${YELLOW}━━━ ${BOLD}$theme${RST} ${YELLOW}━━━${RST}"
        source "$THEME_DIR/_modular"
        render
        echo ""
    done
}

cmd_preview_all() {
    echo ""
    echo "${BOLD}All 40 Theme Previews:${RST}"
    echo ""

    # Mock data for preview
    export MODEL="Claude Opus 4.5"
    export DIR_NAME="my-project"
    export CONTEXT_PCT=35
    export SESSION_DURATION_MIN=42
    export IS_GIT_REPO=true
    export BRANCH="main"
    export WORKTREE="my-project"
    export GIT_ADDED=3
    export GIT_MODIFIED=2
    export GIT_DELETED=0
    export GIT_AHEAD=1
    export GIT_BEHIND=0
    export RATE_TIME_LEFT="2h 30m"
    export RATE_RESET_TIME="04:00"
    export RATE_LIMIT_PCT=42
    export BURN_RATE='$4.76/h'

    for theme in $(get_modular_themes); do
        export THEME_NAME="$theme"
        echo "${YELLOW}━━━ ${BOLD}$theme${RST} ${YELLOW}━━━${RST}"
        source "$THEME_DIR/_modular"
        render
        echo ""
    done
}

cmd_apply() {
    local theme="$1"

    if ! is_valid_theme "$theme"; then
        echo "${BOLD}Error:${RST} Theme '$theme' not found."
        echo ""
        echo "Theme format: [mono-][lsd-|rainbow-]{layout}[-nerd]"
        echo "  Layouts: 1-line, 2-line, card, bars, badges"
        echo "  Examples: lsd-bars, mono-card-nerd, badges-nerd"
        echo ""
        echo "Run '${CYAN}zstheme --list${RST}' to see all available themes."
        exit 1
    fi

    echo ""
    echo "${GREEN}Theme '${BOLD}$theme${RST}${GREEN}' selected!${RST}"
    echo ""
    echo "To apply, add this to your shell config (~/.zshrc or ~/.bashrc):"
    echo ""
    echo "  ${CYAN}export CLAUDE_THEME=\"$theme\"${RST}"
    echo ""
    echo "Then restart your terminal or run:"
    echo ""
    echo "  ${CYAN}source ~/.zshrc${RST}"
    echo ""

    # Also show quick apply option
    echo "${DIM}Quick apply (current session only):${RST}"
    echo "  ${CYAN}export CLAUDE_THEME=\"$theme\"${RST}"
    echo ""
}

cmd_interactive() {
    print_header

    local themes=($(get_modular_themes))
    local current=$(get_current_theme)
    local selected=0

    # Find current theme index
    for i in "${!themes[@]}"; do
        if [[ "${themes[$i]}" == "$current" ]]; then
            selected=$i
            break
        fi
    done

    # Mock data for preview
    export MODEL="Claude Opus 4.5"
    export DIR_NAME="my-project"
    export CONTEXT_PCT=35
    export SESSION_DURATION_MIN=42
    export IS_GIT_REPO=true
    export BRANCH="main"
    export WORKTREE="my-project"
    export GIT_ADDED=3
    export GIT_MODIFIED=2
    export GIT_DELETED=0
    export GIT_AHEAD=1
    export GIT_BEHIND=0
    export RATE_TIME_LEFT="2h 30m"
    export RATE_RESET_TIME="04:00"
    export RATE_LIMIT_PCT=42
    export BURN_RATE='$4.76/h'

    # Hide cursor
    tput civis 2>/dev/null || true
    trap 'tput cnorm 2>/dev/null || true; exit' INT TERM EXIT

    while true; do
        # Clear screen and move to top
        tput clear 2>/dev/null || clear
        print_header

        echo "${BOLD}Select a theme:${RST} ${DIM}(↑↓ to navigate, Enter to apply, q to quit)${RST}"
        echo ""

        # Show theme list
        for i in "${!themes[@]}"; do
            local theme="${themes[$i]}"
            local desc=$(theme_description "$theme")
            if [[ $i -eq $selected ]]; then
                echo "  ${GREEN}▸ ${BOLD}$theme${RST}  ${DIM}- $desc${RST}"
            else
                echo "    ${CYAN}$theme${RST}  ${DIM}- $desc${RST}"
            fi
        done

        echo ""
        echo "${YELLOW}━━━ Preview ━━━${RST}"
        echo ""

        # Show preview of selected theme
        export THEME_NAME="${themes[$selected]}"
        source "$THEME_DIR/_modular"
        render

        echo ""

        # Read key
        read -rsn1 key

        case "$key" in
            q|Q)
                tput cnorm 2>/dev/null || true
                echo "Cancelled."
                exit 0
                ;;
            $'\x1b')  # Escape sequence
                read -rsn2 -t 0.1 key2
                case "$key2" in
                    '[A')  # Up arrow
                        ((selected--))
                        [[ $selected -lt 0 ]] && selected=$((${#themes[@]} - 1))
                        ;;
                    '[B')  # Down arrow
                        ((selected++))
                        [[ $selected -ge ${#themes[@]} ]] && selected=0
                        ;;
                esac
                ;;
            '')  # Enter
                tput cnorm 2>/dev/null || true
                cmd_apply "${themes[$selected]}"
                exit 0
                ;;
        esac
    done
}

cmd_help() {
    echo ""
    echo "${BOLD}zstheme${RST} - Claude Code Statusline Theme Manager (v$VERSION)"
    echo ""
    echo "${BOLD}Usage:${RST}"
    echo "  zstheme              Interactive theme selector"
    echo "  zstheme <theme>      Apply a specific theme"
    echo "  zstheme --list       List available themes"
    echo "  zstheme --preview    Preview sample themes"
    echo "  zstheme --preview-all Preview all 60 themes"
    echo "  zstheme --help       Show this help"
    echo "  zstheme --version    Show version"
    echo ""
    echo "${BOLD}Theme Format:${RST}"
    echo "  [mono-][lsd-|rainbow-]{layout}[-nerd]"
    echo ""
    echo "  ${CYAN}Layouts:${RST}    1-line, 2-line, card, bars, badges"
    echo "  ${CYAN}Colors:${RST}     color (default) or mono-"
    echo "  ${CYAN}Animation:${RST}  static (default), lsd-, or rainbow-"
    echo "  ${CYAN}Icons:${RST}      emoji (default) or -nerd"
    echo ""
    echo "${BOLD}Examples:${RST}"
    echo "  zstheme 2-line           # Classic 2-line layout"
    echo "  zstheme bars-nerd        # Grouped bars with Nerd Font"
    echo "  zstheme mono-card        # Monochrome card"
    echo "  zstheme lsd-badges-nerd  # Rainbow badges with Nerd Font"
    echo ""
    echo "${BOLD}Configuration:${RST}"
    echo "  Add to ~/.zshrc or ~/.bashrc:"
    echo "    export CLAUDE_THEME=\"<theme-name>\""
    echo ""
}

cmd_version() {
    echo "zstheme version $VERSION"
}

# ============================================================
# Main
# ============================================================

case "${1:-}" in
    --list|-l)
        cmd_list
        ;;
    --preview|-p)
        cmd_preview
        ;;
    --preview-all|-P)
        cmd_preview_all
        ;;
    --help|-h)
        cmd_help
        ;;
    --version|-v)
        cmd_version
        ;;
    "")
        cmd_interactive
        ;;
    *)
        cmd_apply "$1"
        ;;
esac
